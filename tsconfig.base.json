{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2015", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
